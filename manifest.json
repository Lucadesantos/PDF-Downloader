{
  "manifest_version": 2,

  "name": "PDF Downloader",
  "description": "Automatically download PDF files",
  "version": "1",

  "permissions": [
    "downloads", "activeTab", "tabs", "<all_urls>", "webRequest", "storage"
  ],
  "icons": {
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "PDF Downloader",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }

}